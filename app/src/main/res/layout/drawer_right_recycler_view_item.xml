<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_6x"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_2x"
    android:paddingRight="@dimen/dimen_2x">

    <TextView
        android:id="@+id/tv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/dimen_2x"
        android:paddingStart="0dp"
        android:textColor="@color/nav_text_color"
        android:textSize="@dimen/text_size_option_items" />

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/drag_handle_icon_size"
        android:layout_height="@dimen/drag_handle_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/drag_handle_desc" />

</RelativeLayout>